public class SistemaPuntos {

    private int puntos;
    private String rango;

    public SistemaPuntos() {
        puntos = 0;
        rango = "Aprendiz";
    }

    public void sumarPuntos(int cantidad) {
        puntos += cantidad;
        actualizarRango();
    }

    private void actualizarRango() {
        if (puntos >= 1000 && puntos < 3000) {
            rango = "Operador";
        } else if (puntos >= 3000 && puntos < 6000) {
            rango = "Supervisor";
        } else if (puntos >= 6000 && puntos < 10000) {
            rango = "Jefe de ProducciÃ³n";
        } else if (puntos >= 10000) {
            rango = "Gerente General";
        } else {
            rango = "Aprendiz";
        }
    }

    public int getPuntos() {
        return puntos;
    }

    public String getRango() {
        return rango;
    }
}
